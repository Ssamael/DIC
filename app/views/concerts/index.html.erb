<h1> Concert list </h1>
<%= link_to 'New concert', new_concert_path %>

<table>
	<tr>
		<th>Band</th>
		<th>Date</th>
	</tr>

	<% @concerts = Concert.all %>
	<% @concerts.each do |concert| %>
	<tr>
		<td><%= link_to concert.band, concert_path(concert) %></td>
		<td><%= concert.date %></td>
		<td><%= link_to 'Show', concert_path(concert) %></td>
		<td><%= link_to 'Edit', edit_concert_path(concert) %></td>
		<td><%= link_to 'Destroy', concert_path(concert), 
				method: :delete, 
				data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>

<p>
	<% if @concerts.size == 0 %>
	<em>No concerts found</em>
	<% end %>
</p>
