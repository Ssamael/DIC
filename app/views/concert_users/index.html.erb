<div class='container features'>

    <h2><%= @concert.band %></h2>
	<h3><%= I18n.t("concert.users_list") %></h3>

	<table class='table table-dark'>
		<tr class='table_header'>
            <th><%= I18n.t("user.email") %></th>
            <th><%= I18n.t("user.count") %></th>
		</tr>

		<% @concert.users.each do |user| %>
		<tr>
			<td><%= link_to user.email, user_concerts_path(user) %></td>
			<td><%= link_to user.concerts.count, user_concerts_path(user) %></td>
		</tr>
		<% end %>
	</table>

	<p>
		<% if @concert.users.size == 0 %>
		<em><%= I18n.t("concert.0users") %></em>
		<% end %>
	</p>
</div>