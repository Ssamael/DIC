<div class='container features'>
    <h2><%= @user.email %></h2>
	<h3><%= I18n.t("user.concerts_list") %></h3>

    <table class='table table-dark'>
		<tr class='table_header'>
			<th><%= I18n.t("concert.band") %></th>
			<th><%= I18n.t("concert.date") %></th>
            <th> </th>
		</tr>

		<% @concerts.each do |concert| %>
		<tr>
			<td><%= link_to concert.band, concert_path(concert) %></td>
			<td><%= concert.date %></td>
            <% if user_signed_in? && @user.id == current_user.id %>
                <td><%= link_to I18n.t("concert.resign"), concert_resign_path(concert), method: :delete, data: { confirm: I18n.t("concerts.confirm") } %></td>
            <% end %>
		</tr>
		<% end %>
	</table>


</div>